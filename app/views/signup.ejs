<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      /* Importing Google Fonts */
      @import url("https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&display=swap");

      /* Email styles */
      body {
        font-family: "Open Sans", Arial, sans-serif;
        margin: 0;
        padding: 0;
      }
      .container {
        background-color: #fff;
        padding: 40px;
        margin: 20px auto;
        max-width: 600px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }
      h2 {
        color: #333;
        font-size: 24px;
        font-weight: 600;
        margin-top: 0;
      }
      p {
        color: #666;
        line-height: 1.5;
        margin-bottom: 20px;
      }
      .tick_bg {
        background-color: #ff6b01;
        padding: 10px;
        border-radius: 4px;
        text-align: center;
      }
      footer {
        text-align: center;
        font-size: 14px;
        color: #999;
      }
      footer img {
        margin: 0 10px;
      }
      .flex {
        display: flex;
      }
      .justify-between {
        justify-content: space-between;
      }
      .items-center {
        align-items: center;
      }
      .gap-10 {
        gap: 10px;
      }
      .text-center {
        text-align: center;
      }
      /* Responsive design */
      @media (max-width: 768px) {
        .flex {
          flex-direction: column;
        }
        .container {
          width: 95%;
          margin: 10px auto;
        }
      }
    </style>
  </head>
